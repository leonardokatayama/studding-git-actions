{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowUmdGlobalAccess": true,
    "baseUrl": "./",
    "rootDir": "./",
    "rootDirs": ["src", "tests"],
    "paths": {
      "src/*":["src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["dist/**/*"]
}
